<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_corners">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_corners" >

        <include layout="@layout/view_title_back" />

        <TextView
            style="@style/TitleText"
            android:text="菜单"
            android:textColor="@color/text_main_item"
            android:textSize="@dimen/text_normal"
             />
    </RelativeLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/amenu_view_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_setting"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="设置"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_l" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" />
    
    <LinearLayout
        android:id="@+id/amenu_view_mode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_mode"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:text="模式"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_l" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" />
    
    <LinearLayout
        android:id="@+id/amenu_view_suggest"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_suggest"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="推荐应用"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_l" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center|right"
            android:background="@drawable/icon_hot"
            android:contentDescription="@string/app_name" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow_right"
            android:contentDescription="@string/app_name" />
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" />
    
    <LinearLayout
        android:id="@+id/amenu_view_about"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_about"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:text="关于"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_l" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" />
    
    <LinearLayout
        android:id="@+id/amenu_view_feedback"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_feedback"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_l" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" />
    
    <LinearLayout
        android:id="@+id/amenu_view_checkupdate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_checkupdate"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:text="检查更新"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_l" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" />
    
    <Button
        android:id="@+id/amenu_btn_logout" 
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="退出"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/white"
        android:background="@drawable/btn_exti_style"
        android:layout_gravity="center_horizontal"/>
    
    </LinearLayout>
    
</ScrollView>
</LinearLayout>
</LinearLayout>
