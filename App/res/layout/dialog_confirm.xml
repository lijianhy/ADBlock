<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/dc_view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/corner_white_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dc_text_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="检测到新版本，是否更新"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/btn_noclick" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dc_btn_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_leftbottom"
                android:text="立即更新"
                android:textColor="@color/btn_noclick"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:padding="5dp"
                android:textSize="@dimen/text_normal" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/btn_noclick" />

            <Button
                android:id="@+id/dc_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_rightbottom"
                android:padding="5dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:text="取消"
                android:textColor="@color/btn_noclick"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>